FROM node:12.14-alpine

WORKDIR /usr/src

# Set API url
ARG API_URL
ENV API_URL $API_URL

ARG API_URL_BROWSER
ENV API_URL_BROWSER $API_URL_BROWSER

ARG SHARE_DOMAIN
ENV SHARE_DOMAIN $SHARE_DOMAIN

ARG STRIPE_PUBLIC_KEY
ENV STRIPE_PUBLIC_KEY $STRIPE_PUBLIC_KEY

# Set host
ENV HOST 0.0.0.0

# Set and expose port
ENV PORT 3000
EXPOSE $PORT

# Install dependences
# https://github.com/nodejs/docker-node/blob/master/docs/BestPractices.md#node-gyp-alpine
RUN apk add --no-cache --virtual .gyp python make g++ git
COPY package*.json ./
RUN npm ci

CMD ["npm", "run", "dev"]
